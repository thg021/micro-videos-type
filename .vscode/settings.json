{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.tabSize": 4,
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#09977a",
        "activityBar.activeBackground": "#c29d0b",
        "activityBar.background": "#c29d0b",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#86f8e1",
        "activityBarBadge.foreground": "#15202b",
        "sash.hoverBorder": "#c29d0b",
        "statusBar.background": "#c29d0b",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#927608",
        "statusBarItem.remoteBackground": "#c29d0b",
        "statusBarItem.remoteForeground": "#15202b"
    },
    "peacock.remoteColor": "#F1C40F",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "workbench.startupEditor": "none"
}
